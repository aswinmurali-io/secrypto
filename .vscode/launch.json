    "version": "0.2.0",
    "configurations": [
        {
            "name": "Secrypto Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "SECRET_KEY": "dev",
                "FLASK_APP": "secrypto",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_RUN_CERT": "adhoc",
                //"FLASK_RUN_KEY": "security/server.key"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
    ]
}